    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="murali.myapplication.MainActivity">


    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Button" />

    <Button
        android:id="@+id/rest_page_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/test_button"
        android:layout_alignStart="@+id/test_button"
        android:layout_below="@+id/test_button"
        android:layout_marginTop="10dp"
        android:text="Go to Rest API test page" />
</RelativeLayout>
